@model UserRoleViewModel
@{
    ViewData["Title"] = "RoleAssign";
}
<div class="main-content">

    <div class="page-content">
        <div class="container-fluid">

            <!-- start page title -->
            <div class="row">
                <div class="col-12">
                    <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                        <h2 class=" m-auto">Add Role</h2>

                    </div>
                </div>
            </div>
            <!-- end page title -->

            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            <form asp-action="RoleAssign" method="post">
                                <div class="row">
                                    <div class="col-sm-6">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <div class="mb-3">
                                            <input asp-for="UserId" type="hidden" class="form-control" />
                                            <label asp-for="RoleName" class="control-label">Restaurants</label>
                                            <select asp-for="RoleName" class="form-control select2"
                                            asp-items="@(new SelectList(Model.Roles, nameof(RoleViewModel.Name), nameof(RoleViewModel.Name)))">
                                                <option disabled>Select</option>
                                               
                                            </select>
                                        </div>
                                    </div>
                                </div>

                                <div class="d-flex flex-wrap gap-2">
                                    <button type="submit" class="btn btn-primary waves-effect waves-light">Save Changes</button>
                                    <a asp-action="RoleIndex" class="btn btn-secondary waves-effect waves-light">Back to List</a>
                                </div>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<h1>RoleAssign</h1>

