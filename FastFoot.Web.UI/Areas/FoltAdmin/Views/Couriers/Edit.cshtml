@model Courier
@{
    ViewData["Title"] = "Edit";
}
<h1 class="text-center">Edit Courier</h1>
<hr />

<div class="mx-auto d-block">
    <form class="mx-auto"  asp-action="Edit">
        <div class="row">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group col">
                <label asp-for="Name" class="control-label ">Name</label>
                <input asp-for="Name" class="form-control" placeholder="Name">
            </div>
            <div class="form-group col">
                <label asp-for="CitiesId" class="control-label">Citie</label>
                <select asp-for="CitiesId" class="form-control" asp-items="ViewBag.CitiesId"></select>
            </div>
        </div>

        <div class="form-group mt-4 text-center">
            <input type="submit" value="Edit" class="btn btn-outline-success btn-lg" />
        </div>
    </form>
</div>

<div>
    <a class="btn btn-outline-info btn-lg text-decoration-none  float-end" asp-action="Index">Back to List</a>
</div>

