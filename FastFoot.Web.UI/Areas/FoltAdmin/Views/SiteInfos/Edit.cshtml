@model SiteInfo
@{
    ViewData["Title"] = "Edit";
}

<div class="main-content">

    <div class="page-content">
        <div class="container-fluid">

            <!-- start page title -->
            <div class="row">
                <div class="col-12">
                    <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                        <h2 class=" m-auto">Edit Site Info</h2>

                    </div>
                </div>
            </div>
            <!-- end page title -->

            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            <form asp-action="Edit" method="post" enctype="multipart/form-data">
                                <div class="row">
                                    <div class="col-sm-6">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <div class="mb-3">
                                            <label asp-for="Name">Name</label>
                                            <input asp-for="Name" class="form-control" placeholder="Name">
                                        </div>
                                        <div class="mb-3">
                                            <label asp-for="Address">Address</label>
                                            <input asp-for="Address" class="form-control" placeholder="Address">
                                        </div>
                                        <div class="mb-3">
                                            <input type="hidden" asp-for="Logo" value="@Model.Logo" />
                                            <label asp-for="Logo">Logo</label>
                                            <input asp-for="Logo" type="file" name="imageFile" class="form-control" placeholder="Logo">
                                        </div>
                                        <div class="mb-3">
                                            <input type="hidden" asp-for="FavIcon" value="@Model.FavIcon" />
                                            <label asp-for="FavIcon">Icon</label>
                                            <input asp-for="FavIcon" type="file" name="iconFile" class="form-control" placeholder="Icon">
                                        </div>
                                    </div>

                                    <div class="col-sm-6">
                                        <div class="mb-3">
                                            <label asp-for="CitiesId" class="control-label">Citie</label>
                                            <select asp-for="CitiesId" asp-items="ViewBag.CitiesId" class="form-control select2">
                                                <option>Select</option>
                                            </select>
                                        </div>
                                        <div class="mb-3">
                                            <label asp-for="Number">Number</label>
                                            <input asp-for="Number" class="form-control" placeholder="Number">
                                        </div>
                                        <div class="mb-3">
                                            <label asp-for="Email">Email</label>
                                            <input asp-for="Email" type="email" class="form-control" placeholder="Email">
                                        </div>
                                    </div>
                                </div>

                                <div class="d-flex flex-wrap gap-2">
                                    <button type="submit" class="btn btn-primary waves-effect waves-light">Save Changes</button>
                                    <a asp-action="Index" class="btn btn-secondary waves-effect waves-light">Back to List</a>
                                </div>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

