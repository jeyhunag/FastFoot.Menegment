@model Restaurants
@{
    ViewData["Title"] = "Edit";
}

<style>
    label, h1, hr {
        color: #FF7636;
    }
</style>
<h1 class="text-center display-3">Edit Restaurants</h1>
<hr />

<div class="mx-auto d-block">
    <form enctype="multipart/form-data" class="mx-auto" method="post" asp-action="Edit">
        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group col">
                <label asp-for="Name" class="control-label ">Name</label>
                <input asp-for="Name" class="form-control" placeholder="Name">
            </div>
            <div class="form-group col">
                <label asp-for="City" class="control-label ">City</label>
                <input asp-for="City" class="form-control" placeholder="City">
            </div>
            <div class="form-group col">
                <label asp-for="Street" class="control-label ">Street</label>
                <input asp-for="Street" class="form-control" placeholder="Street">
            </div>
            <div class="form-group col">
                <label asp-for="Bina" class="control-label ">Bina</label>
                <input asp-for="Bina" class="form-control" placeholder="Bina">
            </div>
            <div class="form-group col">
                <label asp-for="Email" class="control-label ">Email</label>
                <input type="email" asp-for="Email" class="form-control" placeholder="Email">
            </div>
            <div class="form-group col">
                <label asp-for="Address" class="control-label ">Address</label>
                <input asp-for="Address" class="form-control" placeholder="Address">
            </div>
            <div class="form-group col">
                <label asp-for="Number" class="control-label ">Number</label>
                <input asp-for="Number" class="form-control" placeholder="Number">
            </div>
            <div class="form-group col">
                <label asp-for="MenzilNo" class="control-label ">MenzilNo</label>
                <input asp-for="MenzilNo" class="form-control" placeholder="MenzilNo">
            </div>
            <div class="form-group col">
                <label asp-for="Latitude" class="control-label ">Latitude</label>
                <input asp-for="Latitude" class="form-control" placeholder="Latitude">
            </div>
            <div class="form-group col">
                <label asp-for="Longitude" class="control-label ">Description</label>
                <input asp-for="Longitude" class="form-control" placeholder="Description">
            </div>
            <div class="form-group col">
                <label asp-for="CitiesId" class="control-label">Citie</label>
                <select asp-for="CitiesId" class="form-control" asp-items="ViewBag.CitiesId"></select>
            </div>
        </div>
        <div class="form-group col">
            <div class="custom-file" style="width: 200px;">
                <input type="hidden" asp-for="Image" value="@Model.Image" />
                <label asp-for="Image" class="control-label ">Image</label>
                <input type="file" asp-for="Image" name="imageFile" class="form-control">

            </div>
        </div>
        <div class="form-group mt-4 text-center">
            <input type="submit" value="Edit" class="btn btn-outline-success btn-lg" />
        </div>
    </form>
</div>

<div>
    <a class="btn btn-outline-info btn-lg text-decoration-none  float-end" asp-action="Index">Back to List</a>
</div>

