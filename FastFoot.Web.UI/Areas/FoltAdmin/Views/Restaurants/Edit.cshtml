@model Restaurants
@{
    ViewData["Title"] = "Edit";
}

<div class="main-content">

    <div class="page-content">
        <div class="container-fluid">

            <!-- start page title -->
            <div class="row">
                <div class="col-12">
                    <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                        <h2 class=" m-auto">Edit Restaurants</h2>

                    </div>
                </div>
            </div>
            <!-- end page title -->

            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            <form asp-action="Edit" method="post" enctype="multipart/form-data">
                                <div class="row">
                                    <div class="col-sm-6">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <div class="mb-3">
                                            <label asp-for="Name">Name</label>
                                            <input asp-for="Name" class="form-control" placeholder="Name">
                                        </div>
                                        <div class="mb-3">
                                            <label asp-for="City">City</label>
                                            <input asp-for="City" name="City" class="form-control" placeholder="City">
                                        </div>
                                        <div class="mb-3">
                                            <label asp-for="Street">Street</label>
                                            <input asp-for="Street" name="Street" class="form-control" placeholder="Street">
                                        </div>
                                        <div class="mb-3">
                                            <label asp-for="Bina">Bina</label>
                                            <input asp-for="Bina" class="form-control" placeholder="Bina">
                                        </div>
                                        <div class="mb-3">
                                            <label asp-for="Number">Number</label>
                                            <input asp-for="Number" class="form-control" placeholder="Number">
                                        </div>
                                        <div class="mb-3">
                                            <input type="hidden" asp-for="Image" value="@Model.Image" />
                                            <label asp-for="Image">Image</label>
                                            <input asp-for="Image" type="file" name="imageFile" class="form-control" placeholder="Image">
                                        </div>
                                    </div>

                                    <div class="col-sm-6">
                                        <div class="mb-3">
                                            <label asp-for="CitiesId" class="control-label">Cities</label>
                                            <select asp-for="CitiesId" asp-items="ViewBag.CitiesId" class="form-control select2">
                                                <option>Select</option>
                                            </select>
                                        </div>
                                        <div class="mb-3">
                                            <label asp-for="Email">Email</label>
                                            <input asp-for="Email" type="email" class="form-control" placeholder="Email">
                                        </div>
                                        <div class="mb-3">
                                            <label asp-for="MenzilNo">Menzil Nomresi</label>
                                            <input asp-for="MenzilNo" class="form-control" placeholder="Menzil Nomresi">
                                        </div>
                                        <div class="mb-3">
                                            <label asp-for="Address">Address</label>
                                            <input asp-for="Address" class="form-control" placeholder="Address">
                                        </div>
                                        <div class="mb-3">
                                            <label asp-for="Latitude">Latitude</label>
                                            <input asp-for="Latitude" class="form-control" placeholder="Latitude">
                                        </div>
                                        <div class="mb-3">
                                            <label asp-for="Longitude">Longitude</label>
                                            <input asp-for="Longitude" class="form-control" placeholder="Longitude">
                                        </div>
                                    </div>
                                </div>

                                <div class="d-flex flex-wrap gap-2">
                                    <button type="submit" class="btn btn-primary waves-effect waves-light">Save Changes</button>
                                    <a asp-action="Index" class="btn btn-secondary waves-effect waves-light">Back to List</a>
                                </div>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


