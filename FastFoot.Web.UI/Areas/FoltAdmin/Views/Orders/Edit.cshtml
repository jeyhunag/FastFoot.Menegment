@model Orders
@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center">Edit Orders</h1>
<hr />

<div class="mx-auto d-block">
    <form class="mx-auto" asp-action="Edit">
        <div class="row">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group col">
                <label asp-for="OrderNumber" class="control-label ">Order Number</label>
                <input asp-for="OrderNumber" class="form-control" placeholder="Order Number">
            </div>
            <div class="form-group col">
                <label asp-for="City" class="control-label ">City</label>
                <input asp-for="City" class="form-control" placeholder="City">
            </div>
            <div class="form-group col">
                <label asp-for="Street" class="control-label ">Street</label>
                <input asp-for="Street" class="form-control" placeholder="Street">
            </div>
            <div class="form-group col">
                <label asp-for="Bina" class="control-label ">Bina</label>
                <input asp-for="Bina" class="form-control" placeholder="Bina">
            </div>
            <div class="form-group col">
                <label asp-for="Number" class="control-label ">Number</label>
                <input asp-for="Number" class="form-control" placeholder="Number">
            </div>
            <div class="form-group col">
                <label asp-for="MenzilNo" class="control-label ">MenzilNo</label>
                <input asp-for="MenzilNo" class="form-control" placeholder="Menzil No">
            </div>
            <div class="form-group col">
                <label asp-for="Email" class="control-label ">Email</label>
                <input type="email" asp-for="Email" class="form-control" placeholder="Email">
            </div>
            <div class="form-group col">
                <label asp-for="CitiesId" class="control-label"></label>
                <select asp-for="CitiesId" class="form-control" asp-items="ViewBag.CitiesId"></select>
            </div>
            <div class="form-group col">
                <label asp-for="RestaurantsId" class="control-label"></label>
                <select asp-for="RestaurantsId" class="form-control" asp-items="ViewBag.RestaurantsId"></select>
            </div>
            <div class="form-group col">
                <label asp-for="FoodsId" class="control-label"></label>
                <select asp-for="FoodsId" class="form-control" asp-items="ViewBag.FoodsId"></select>
            </div>
            <div class="form-group col">
                <label asp-for="CourierId" class="control-label"></label>
                <select asp-for="CourierId" class="form-control" asp-items="ViewBag.CourierId"></select>
            </div>
        </div>
        <div class="form-group mt-4 text-center">
            <input type="submit" value="Edit" class="btn btn-outline-success btn-lg" />
        </div>
    </form>
</div>

<div>
    <a class="btn btn-outline-info btn-lg text-decoration-none  float-end" asp-action="Index">Back to List</a>
</div>

