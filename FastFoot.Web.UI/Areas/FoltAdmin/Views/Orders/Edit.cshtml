@model Orders
@{
    ViewData["Title"] = "Edit";
}

<div class="main-content">

    <div class="page-content">
        <div class="container-fluid">

            <!-- start page title -->
            <div class="row">
                <div class="col-12">
                    <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                        <h2 class=" m-auto">Edit Orders</h2>

                    </div>
                </div>
            </div>
            <!-- end page title -->

            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            <form asp-action="Edit" method="post">
                                <div class="row">
                                    <div class="col-sm-6">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <div class="mb-3">
                                            <label asp-for="OrderNumber">Order Number</label>
                                            <input asp-for="OrderNumber" class="form-control" placeholder="Order Number">
                                        </div>
                                        <div class="mb-3">
                                            <label asp-for="City">City</label>
                                            <input asp-for="City" name="City" class="form-control" placeholder="City">
                                        </div>
                                        <div class="mb-3">
                                            <label asp-for="Street">Street</label>
                                            <input asp-for="Street" name="Street" class="form-control" placeholder="Street">
                                        </div>
                                        <div class="mb-3">
                                            <label asp-for="Bina">Bina</label>
                                            <input asp-for="Bina" class="form-control" placeholder="Bina">
                                        </div>
                                        <div class="mb-3">
                                            <label asp-for="Number">Number</label>
                                            <input asp-for="Number" class="form-control" placeholder="Number">
                                        </div>
                                        <div class="mb-3">
                                            <label asp-for="MenzilNo">Menzil Nomresi</label>
                                            <input asp-for="MenzilNo" class="form-control" placeholder="Menzil Nomresi">
                                        </div>
                                    </div>

                                    <div class="col-sm-6">
                                        <div class="mb-3">
                                            <label asp-for="RestaurantsId" class="control-label">Restaurants</label>
                                            <select asp-for="RestaurantsId" asp-items="ViewBag.RestaurantsId" class="form-control select2">
                                                <option>Select</option>
                                            </select>
                                        </div>
                                        <div class="mb-3">
                                            <label asp-for="FoodsId" class="control-label">Foods</label>
                                            <select asp-for="FoodsId" asp-items="ViewBag.FoodsId" class="form-control select2">
                                                <option>Select</option>
                                            </select>
                                        </div>
                                        <div class="mb-3">
                                            <label asp-for="CitiesId" class="control-label">Cities</label>
                                            <select asp-for="CitiesId" asp-items="ViewBag.CitiesId" class="form-control select2">
                                                <option>Select</option>
                                            </select>
                                        </div>
                                        <div class="mb-3">
                                            <label asp-for="CourierId" class="control-label">Courier</label>
                                            <select asp-for="CourierId" asp-items="ViewBag.CourierId" class="form-control select2">
                                                <option>Select</option>
                                            </select>
                                        </div>
                                        <div class="mb-3">
                                            <label asp-for="Email">Email</label>
                                            <input asp-for="Email" type="email" class="form-control" placeholder="Email">
                                        </div>
                                    </div>
                                </div>

                                <div class="d-flex flex-wrap gap-2">
                                    <button type="submit" class="btn btn-primary waves-effect waves-light">Save Changes</button>
                                    <a asp-action="Index" class="btn btn-secondary waves-effect waves-light">Back to List</a>
                                </div>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>