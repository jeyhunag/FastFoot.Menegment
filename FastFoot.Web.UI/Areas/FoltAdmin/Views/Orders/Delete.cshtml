@model Orders
@{
    ViewData["Title"] = "Delete";
}

<style>
    .card {
        font-family: serif;
        background-color: #B6DCDD;
        color: #2D642C;
        font-weight: bolder;
        box-shadow: 10px 10px #2D642C;
        width: 100%;
    }

    span {
        float: right;
        margin-right: 1rem;
    }

    .list-box {
        margin-left: 1rem;
        font-size: 20px;
        height: 100%;
        margin-top: 3rem;
        border: 2rem;
    }

    img {
        width: 100%;
        height: 25rem;
    }
</style>


<div class="container">
    <div class="row">
        <!--Card 1-->
        <div class="col-md-6 mx-auto d-block">
            <div class="card">
                <div class="card-header border-4 text-center">
                    <h1 class="display-4">Delete </h1>
                </div>
                <div class=" list-box">
                    <div class="my-3"> Id: <span>@Html.DisplayFor(model => model.Id)</span></div>
                    <div class="my-3"> Order Number: <span>@Html.DisplayFor(model => model.OrderNumber)</span></div>
                    <div class="mb-3"> City: <span>@Html.DisplayFor(model => model.City)</span></div>
                    <div class="mb-3"> Street: <span>@Html.DisplayFor(model => model.Street)</span></div>
                    <div class="mb-3"> Bina: <span>@Html.DisplayFor(model => model.Bina)</span></div>
                    <div class="mb-3"> Number: <span>@Html.DisplayFor(model => model.Number)</span></div>
                    <div class="mb-3"> MenzilNo: <span>@Html.DisplayFor(model => model.MenzilNo)</span></div>
                    <div class="mb-3"> Email: <span>@Html.DisplayFor(model => model.Email)</span></div>
                    <div class="mb-3">Citie: <span>@Html.DisplayFor(model => model.CitiesId)</span></div>
                    <div class="mb-3">RestaurantsId: <span>@Html.DisplayFor(model => model.RestaurantsId)</span></div>
                    <div class="mb-3">FoodsId: <span>@Html.DisplayFor(model => model.FoodsId)</span></div>
                    <div class="mb-3">CourierId: <span>@Html.DisplayFor(model => model.CourierId)</span></div>
                </div>

                <form class="card-footer p-0 text-center " asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <input class="btn btn-danger ms-3 my-4 float-start btn-lg" type="submit" value="Delete" />
                    <a class="btn btn-warning my-4  me-3 float-end btn-lg" asp-action="Index">Back to List</a>
                </form>
            </div>
        </div>
    </div>
</div>

