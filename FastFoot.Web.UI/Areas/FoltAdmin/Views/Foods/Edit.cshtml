@model Foods
@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center">Edit Foods</h1>
<hr />

<div class="mx-auto d-block">
    <form class="mx-auto" enctype="multipart/form-data" asp-action="Edit">
        <div class="row">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group col">
                <label asp-for="Name" class="control-label ">Name</label>
                <input asp-for="Name" class="form-control" placeholder="Name">
            </div>
            <div class="form-group col">
                <label asp-for="Description" class="control-label ">Description</label>
                <input asp-for="Description" class="form-control" placeholder="Description">
            </div>
            <div class="form-group col">
                <label asp-for="CategoriesId" class="control-label"></label>
                <select asp-for="CategoriesId" class="form-control" asp-items="ViewBag.CategoriesId"></select>
            </div>
            <div class="form-group col">
                <label asp-for="RestaurantsId" class="control-label"></label>
                <select asp-for="RestaurantsId" class="form-control" asp-items="ViewBag.RestaurantsId"></select>
            </div>
        </div>
        <div class="form-group col">
            <div class="custom-file" style="width: 200px;">
                <input type="hidden" asp-for="Image" value="@Model.Image" />
                <label asp-for="Image" class="control-label ">Image</label>
                <input type="file" asp-for="Image" name="imageFile" class="form-control">
            </div>
        </div>
        <div class="form-group mt-4 text-center">
            <input type="submit" value="Edit" class="btn btn-outline-success btn-lg" />
        </div>
    </form>
</div>

<div>
    <a class="btn btn-outline-info btn-lg text-decoration-none  float-end" asp-action="Index">Back to List</a>
</div>

