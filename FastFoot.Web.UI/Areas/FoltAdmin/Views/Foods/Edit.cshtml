@model Foods
@{
    ViewData["Title"] = "Edit";
}
@section css{
    <link href="~/assets/multiple-image-input/imager.css" rel="stylesheet"   />
}
<div class="main-content">

    <div class="page-content">
        <div class="container-fluid">

            <!-- start page title -->
            <div class="row">
                <div class="col-12">
                    <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                        <h2 class=" m-auto">Edit Foods</h2>

                    </div>
                </div>
            </div>
            <!-- end page title -->

            <div class="row">

                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            <form asp-action="Edit" method="post" enctype="multipart/form-data">
                                <div class="row">
                                    <div class="col-md-12" style="display: inline-block;">
                                        <div style="width: 600px;" class="imager-container" id="viewer1" name="files">
                                            @foreach (var img in Model.ProductImages)
                                            {
                                                <label thumb-url="/img/@img.ImagePath" image-id="@img.Id" @(img.IsMain == true ? "checked" : "")></label>
                                            }
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <div class="mb-3">
                                            <label asp-for="Name">Name</label>
                                            <input asp-for="Name" class="form-control" placeholder="Name">
                                        </div>
                                        <div class="mb-3">
                                            <label asp-for="Price">Price</label>
                                            <input asp-for="Price" type="number" class="form-control" placeholder="Price">
                                        </div>
                                        <div class="mb-3">
                                            <label asp-for="Discount">Discount</label>
                                            <input asp-for="Discount" class="form-control" placeholder="Discount">
                                        </div>
                                    </div>

                                    <div class="col-sm-6">
                                        <div class="mb-3">
                                            <label asp-for="RestaurantsId" class="control-label">Restaurants</label>
                                            <select asp-for="RestaurantsId" asp-items="ViewBag.RestaurantsId" class="form-control select2">
                                                <option disabled>Select</option>
                                            </select>
                                        </div>
                                        <div class="mb-3">
                                            <label asp-for="CategoriesId" class="control-label">Categories</label>
                                            <select asp-for="CategoriesId" asp-items="ViewBag.CategoriesId" class="form-control select2">
                                                <option disabled>Select</option>
                                            </select>
                                        </div>
                                        <div class=" m-auto">
                                            <label asp-for="Description"> Description</label>
                                            <textarea class="form-control" asp-for="Description" rows="5" placeholder="Description"></textarea>
                                        </div>
                                    </div>
                                </div>

                                <div class="d-flex flex-wrap gap-2">
                                    <button type="submit" class="btn btn-primary waves-effect waves-light">Save Changes</button>
                                    <a asp-action="Index" class="btn btn-secondary waves-effect waves-light">Back to List</a>
                                </div>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/assets/multiple-image-input/jquery.image-input.js"></script>
    <script src="~/assets/multiple-image-input/imager.js"></script>
    <script>
        $('#viewer1').imgadd({
            tnWidth: '120px',
            tnHeight: '120px',
            fontSize: '55px',
            plusInnerHtml: '',
            plusBtnClass: undefined
        });
    </script>
}