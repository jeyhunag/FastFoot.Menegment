@model IEnumerable<Categories>
<div class="space">
    <div class="shape-mockup jump d-none d-lg-block"
         data-top="15%"
         data-left="5%">
        <img src="~/asset/img/update_2/shape/french_fry.png" alt="shape" />
    </div>
    <div class="shape-mockup jump-reverse d-none d-lg-block"
         data-top="15%"
         data-right="3%">
        <img src="~/asset/img/update_2/shape/red_chili_2.png" alt="shape" />
    </div>
    <div class="container">
        <div class="title-area text-center">
            <span class="sub-title">Best food for family</span>
            <h2 class="sec-title">Choose your best Category</h2>
        </div>
        <div class="row th-carousel"
             data-slide-show="5"
             data-ml-slide-show="4"
             data-lg-slide-show="4"
             data-md-slide-show="3"
             data-sm-slide-show="2"
             data-xs-slide-show="2">
             @foreach (var item in Model)
            {
                <div class="col-xl-3 col-lg-4 col-md-6">
                    <div class="category-grid">
                        <div class="category-grid_img">
                            <img src="~/@item.ImagePath"
                                 alt="icon" />
                        </div>
                        <div class="category-grid_content">
                            <h3 class="category-grid_title">
                                <a asp-controller="Shops" asp-action="Index" asp-route-category="@item.Id">@item.Name</a>
                            </h3>
                        </div>
                    </div>
                </div>
            }
         

        </div>
    </div>
</div>