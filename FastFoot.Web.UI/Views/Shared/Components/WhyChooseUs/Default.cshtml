@model IEnumerable<Services>

<section class="space">
    <div class="shape-mockup moving d-none d-lg-block"
         data-top="10%"
         data-left="3%">
        <img src="~/asset/img/update_2/shape/tree_2.png" alt="shape" />
    </div>
    <div class="shape-mockup jump d-none d-lg-block"
         data-bottom="10%"
         data-right="1%">
        <img src="~/asset/img/update_2/shape/tomato_6.png" alt="shape" />
    </div>
    <div class="container">
        <div class="row align-items-center">
            <div class="col-xl-4 text-center text-xl-start">
                <div class="title-area mb-25">
                    <span class="sub-title">Why Choose Us</span>
                    <h2 class="sec-title">Discover art of Food with us.</h2>
                </div>
                <p class="mt-n2 mb-30">
                    Embark on a journey of culinary exploration discover the Art of
                    good Food with us. Our passion
                </p>
                <a href="about.html" class="th-btn rounded-2">
                    ABOUT MORE<i class="fa-solid fa-arrow-right ms-2"></i>
                </a>
            </div>
            <div class="col-xl-8 mt-40 mt-xl-0">
                <div class="row gy-4 justify-content-center">
                    @foreach (var item in Model)
                    {
                        <div class="col-lg-4 col-sm-6">
                            <div class="why-feature">
                                <div class="why-feature_icon">
                                    <img src="~/@item.Icon"
                                         alt="icon" />
                                </div>
                                <h3 class="why-feature_title">@item.Name</h3>
                                <p class="why-feature_text">
                                    @item.Description
                                </p>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>