@model Restaurants
@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center">Edit Restaurants</h1>
<hr />

<div class="mx-auto d-block">
    <form class="mx-auto" enctype="multipart/form-data" asp-action="Edit">
        <div class="row">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group col">
                <label asp-for="Name" class="control-label ">Name</label>
                <input asp-for="Name" class="form-control" placeholder="Name">
            </div>
            <div class="form-group col">
                <label asp-for="Address" class="control-label ">Address</label>
                <input asp-for="Address" class="form-control" placeholder="Address">
            </div>
            <div class="form-group col">
                <label asp-for="Latitude" class="control-label ">Latitude</label>
                <input asp-for="Latitude" class="form-control" placeholder="Latitude">
            </div>
            <div class="form-group col">
                <label asp-for="Longitude" class="control-label ">Longitude</label>
                <input asp-for="Longitude" class="form-control" placeholder="Longitude">
            </div>
        </div>
        <div class="form-group col">
            <div class="custom-file" style="width: 200px;">
                <label asp-for="Image" class="control-label ">Image</label>
                <input type="file" asp-for="Image" name="imageFile" class="form-control">
            </div>
        </div>
        <div class="form-group mt-4 text-center">
            <input type="submit" value="Edit" class="btn btn-outline-success btn-lg" />
        </div>
    </form>
</div>

<div>
    <a class="btn btn-outline-info btn-lg text-decoration-none  float-end" asp-action="Index">Back to List</a>
</div>

