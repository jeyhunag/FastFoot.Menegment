
@{
    ViewData["Title"] = "ProfileSettings";
}


@if (!string.IsNullOrWhiteSpace(ViewBag.role) && ViewBag.role == "Restaurants")
{
    @await Component.InvokeAsync("UserRestaurants", new {id=ViewBag.Id} )
}
else if (!string.IsNullOrWhiteSpace(ViewBag.role) && ViewBag.role == "Kuryer")
{
    @await Component.InvokeAsync("UserCourier", new {id=ViewBag.Id})
}
else
{
    @await Component.InvokeAsync("User", new {id=ViewBag.Id})
}
